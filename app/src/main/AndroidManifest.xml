<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bailey.dine_in_app">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Activities -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomerHomeActivity"
            android:label="@string/title_activity_customer_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MakeReservationActivity"
            android:label="@string/title_activity_make_reservation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TransactionActivity"
            android:label="@string/title_activity_transaction"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CheckoutActivity"
            android:label="@string/title_activity_checkout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowFoodItemsActivity"
            android:label="@string/title_activity_show_food_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowTransactionActivity"
            android:label="@string/title_activity_show_transaction"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowOrderActivity"
            android:label="@string/title_activity_show_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_signup"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".CreateTableActivity"
            android:label="@string/title_activity_create_table"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateFoodItem"
            android:label="@string/title_activity_create_food_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RestaurantHomeActivity"
            android:label="@string/title_activity_restaurant_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowTableReservationsActivity"
            android:label="@string/title_activity_show_table_reservations"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowTransactionDetail"
            android:label="@string/title_activity_show_transaction_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowReservationDetailActivity"
            android:label="@string/title_activity_show_reservation_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlaceOrderActivity"
            android:label="@string/title_activity_place_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchRestaurantListActivity"
            android:label="@string/title_activity_search_restaurant_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchRestaurantActivity"
            android:label="@string/title_activity_search_restaurant"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowOrderDetailActivity"
            android:label="@string/title_activity_show_order_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowReservationActivity"
            android:label="@string/title_activity_show_reservation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowTableListActivity"
            android:label="@string/title_activity_show_table_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>